{
  "resolution_rules": {
    "scopes": ["local", "map", "peer", "external"],
    "inheritance": {
      "props": "merge",
      "platform": "override",
      "features": "merge"
    },
    "fallback_order": [
      "element_defaults",
      "audience_metadata",
      "global_defaults"
    ],
    "validation": {
      "required_fields": ["href", "scope"],
      "scope_rules": {
        "local": ["peer"],
        "peer": ["external"],
        "external": []
      }
    }
  }
}
